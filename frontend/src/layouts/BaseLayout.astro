---
import "../styles/global.css";
import { Navigation } from "@/components/ui/navigation";
import { getSession } from "@/lib/auth/session";

interface Props {
  title: string;
  requireAuth?: boolean;
}

const { title, requireAuth = false } = Astro.props;
const session = await getSession(Astro.request);

// Redirect if auth is required but user is not authenticated
if (requireAuth && !session) {
  return Astro.redirect('/login');
}

// Redirect authenticated users away from auth pages
if (session && ['/login', '/register', '/reset-password'].includes(Astro.url.pathname)) {
  return Astro.redirect('/dashboard');
}
---

<!DOCTYPE html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} - PackMeUp</title>
    <meta name="description" content="PackMeUp - TwÃ³j asystent pakowania" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="theme-color" content="#ffffff" />
  </head>
  <body class="min-h-screen bg-background font-sans antialiased">
    <div class="relative flex min-h-screen flex-col">
      <Navigation 
        client:load 
        isAuthenticated={!!session}
        userName={session?.firstName}
      />
      <main class="flex-1 container mx-auto px-4 py-8">
        <slot />
      </main>
    </div>
  </body>
</html> 