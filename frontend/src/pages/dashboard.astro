---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Button } from "@/components/ui/button";
---

<BaseLayout title="Dashboard" requireAuth={true}>
  <div class="max-w-4xl mx-auto">
    <div class="flex flex-col items-center justify-center space-y-6">
      <h1 class="text-4xl font-bold">Twój Dashboard</h1>
      <p class="text-xl text-muted-foreground text-center">
        Witaj w PackMeUp! Tutaj będziesz mógł zarządzać swoimi listami pakowania.
      </p>
      <a href="/new-trip">
        <Button size="lg">Zaplanuj nową podróż</Button>
      </a>
    </div>
  </div>
</BaseLayout> 