---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { ResetPasswordForm } from '@/components/auth/ResetPasswordForm';
---

<BaseLayout title="Resetowanie hasła - PackMeUp">
  <main class="container mx-auto px-4 py-16 flex flex-col items-center justify-center min-h-[calc(100vh-4rem)]">
    <h1 class="text-4xl font-bold mb-4 text-center">
      PackMeUp
    </h1>
    <p class="text-xl text-muted-foreground mb-8 text-center">
      Odzyskaj dostęp do swojego konta
    </p>
    <ResetPasswordForm client:load />
  </main>
</BaseLayout> 